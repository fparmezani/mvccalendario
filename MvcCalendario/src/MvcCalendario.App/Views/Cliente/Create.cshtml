@model MvcCalendario.App.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Cadastro";
}

<h4>Cadastro</h4>

<hr />

<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <ul class="nav nav-tabs" id="myTab" role="tablist">

                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Dados do contato</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#perfil" role="tab" aria-controls="profile" aria-selected="false">Tipo de contato</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contato" role="tab" aria-controls="contact" aria-selected="false">Endereço</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                    <div class="card">

                        <div class=" card-body row">
                            <div class="col-md">
                                <div class="form-row">
                                    <div class="col-12">
                                        <label asp-for="Nome" class="control-label"></label>
                                        <input class="form-control form-control-sm" asp-for="Nome" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-4">
                                        <label asp-for="CPF" class="control-label"></label>
                                        <input class="form-control form-control-sm" asp-for="CPF" />
                                        <span asp-validation-for="CPF" class="text-danger"></span>
                                    </div>
                                    <div class="col-8">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input class="form-control form-control-sm" asp-for="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-4">
                                        <label asp-for="Grupo" class="control-label"></label>
                                        <select asp-for="Grupo" class="form-control">
                                            <option value="0">Informe o Grupo</option>
                                            <option value="1">Coladorador</option>
                                            <option value="2">Prestador</option>
                                            <option value="3">Diretor</option>
                                        </select>
                                        <span asp-validation-for="Grupo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="perfil" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-md">
                                <div class="form-row">
                                    <div class="col-3">
                                        <label asp-for="Telefone" class="control-label"></label>
                                        <input class="form-control form-control-sm" asp-for="Telefone" />
                                        <span asp-validation-for="Telefone" class="text-danger"></span>
                                    </div>

                                    <div class="col-3">
                                        <label asp-for="Celular" class="control-label"></label>
                                        <input class="form-control form-control-sm" asp-for="Celular" />
                                        <span asp-validation-for="Celular" class="text-danger"></span>
                                    </div>

                                    <div class="col-6">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input class="form-control form-control-sm" asp-for="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="contato" role="tabpanel" aria-labelledby="contact-tab">
                    <div class="card">
                        <div class=" card-body row">
                            <div class="col-12">
                                <partial name="_Enderecos" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


