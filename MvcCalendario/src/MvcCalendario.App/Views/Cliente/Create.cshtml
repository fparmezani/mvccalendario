@model MvcCalendario.App.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Novo Cliente";
}

<h4>@ViewData["Title"]</h4>


<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="card">
                    <div class=" card-body row">
                        <div class="col-md">
                            <div class="form-row">
                                <div class="col-12">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input class="form-control form-control-sm" asp-for="Nome" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-2">
                                    <label asp-for="CPF" class="control-label"></label>
                                    <input class="form-control form-control-sm" asp-for="CPF" />
                                    <span asp-validation-for="CPF" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input class="form-control form-control-sm" asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="Grupo" class="control-label"></label>
                                    <select asp-for="Grupo" class="form-control form-control-sm">
                                        <option value="0">Informe o Grupo</option>
                                        <option value="1">Coladorador</option>
                                        <option value="2">Prestador</option>
                                        <option value="3">Diretor</option>
                                    </select>
                                    <span asp-validation-for="Grupo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
