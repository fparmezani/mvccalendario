@model MvcCalendario.App.ViewModels.ContatoViewModel

<div class="modal-header">
    <h4 class="modal-title"></h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>


<form asp-action="NovoContato">
    <div class="modal-body">
        <input type="hidden" asp-for="ClienteId" />
        <input type="hidden" id="divReturn" value="ContatoTarget"/>
        <div class="col-md">
            <div class="form-row">
                <div class="col-6">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input class="form-control form-control-sm" asp-for="Telefone" />
                </div>
                <div class="col-6">
                    <label asp-for="Celular" class="control-label"></label>
                    <input class="form-control form-control-sm" asp-for="Celular" />
                </div>
            </div>
            <div class="form-row">
                <div class="col-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input class="form-control form-control-sm" asp-for="Email" />
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Principal" /> @Html.DisplayNameFor(model => model.Principal)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Principal" /> @Html.DisplayNameFor(model => model.EhWhatsApp)
                </label>
            </div>
        </div>

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Novo Contato" class="btn btn-success" />
                <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
            </div>
        </div>

    </div>
</form>
