@using MvcCalendario.App.Extensions
@model MvcCalendario.App.ViewModels.ClienteViewModel
<div style="padding-top: 20px">
    <div>
        <h4>Endereço</h4>
        <hr />
    </div>

    <p>
        <a asp-action="NovoEndereco" asp-route-id="@Model.Id" class="btn btn-info" data-modal="">
            <i class="fa fa-plus"></i> Novo Endereço
        </a>
    </p>


    @if (Model != null)
    {
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayName("Logradouro")
                    </th>
                    <th>
                        @Html.DisplayName("Numero")
                    </th>
                    <th>
                        @Html.DisplayName("Complemento")
                    </th>
                    <th>
                        @Html.DisplayName("Bairro")
                    </th>
                    <th>
                        @Html.DisplayName("Cep")
                    </th>
                    <th>
                        @Html.DisplayName("Cidade")
                    </th>
                    <th>
                        @Html.DisplayName("Estado")
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model.Enderecos)
            {
                <tr>
                    <td>
                        @item.Logradouro
                    </td>
                    <td>
                        @item.Numero
                    </td>
                    <td>
                        @item.Complemento
                    </td>
                    <td>
                        @item.Bairro
                    </td>
                    <td>
                        @this.FormataCEP(item.Cep)
                    </td>
                    <td>
                        @item.Cidade
                    </td>
                    <td>
                        @item.UF
                    </td>
                    <td>
                        <a asp-action="AtualizarEndereco" asp-route-id="@item.Id" class="btn btn-info" data-modal="">
                            <span title="Editar" class="fa fa-pencil-alt"></span>
                        </a>
                       
                    </td>
                </tr>

            }
        </table>
    }
</div>
