@using MvcCalendario.App.Extensions
@model MvcCalendario.App.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>
<div>
    <h4>Esta ação será permanente!</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.CPF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo)
        </dt>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>

</div>

